<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuecheng.content.mapper.CourseTeacherMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xuecheng.content.model.po.CourseTeacher">
        <id column="id" property="id" />
        <result column="course_id" property="courseId" />
        <result column="teacher_name" property="teacherName" />
        <result column="position" property="position" />
        <result column="introduction" property="introduction" />
        <result column="photograph" property="photograph" />
        <result column="create_date" property="createDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_id, teacher_name, position, introduction, photograph, create_date
    </sql>

    <insert id="insertCourseTeacher" parameterType="com.xuecheng.content.model.po.CourseTeacher" useGeneratedKeys="true" keyProperty="id">
        insert into course_teacher
        <set>
            <if test="courseId !=null and courseId!=''">
                course_id=#{courseId},
            </if>
            <if test="teacherName !=null and teacherName!=''">
                teacher_name=#{teacherName},
            </if>
            <if test="position !=null and position!=''">
                position=#{position},
            </if>
            <if test="introduction !=null and introduction!=''">
                introduction=#{introduction},
            </if>
            <if test="photograph !=null and photograph!=''">
                photograph=#{photograph},
            </if>
            <if test="createDate !=null">
                create_date=#{createDate}
            </if>
        </set>
    </insert>

</mapper>
